<%= form_with(model: country, local: true) do |form| %>
  <% if country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% country.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>
  <tr>
    <th><%= form.label :name %></th>
    <td><%= form.text_field :name, id: :country_name %></td>
  </tr>

  <tr>
    <th><%= form.label :language_id %></th>
    <td><%= form.select(:language_id, Language.all.map { |l| [l.name, l.id]}) %> <%= link_to 'Add New Language', new_language_path %></td>
   
  </tr>

  <tr>
    <td><%= form.submit %></td>
  </tr>
</table>
<% end %>
