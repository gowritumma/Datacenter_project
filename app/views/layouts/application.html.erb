<!DOCTYPE html>
<html>
  <head>
    <title>DatacenterProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
       <%= stylesheet_link_tag('admin', :media => 'all') %>
  </head>

  <body>
  	 <div id="header">
      <h1>DataCenter Application</h1>
    </div>
    <div id="main">
  	<% if !flash[:notice].blank? %>
  	<div class="notice">
  		<%= flash[:notice] %>
  	</div>
  	<% end %>
    <div id="content">
      <%= link_to 'Data Centers', datacenters_path %> | <%= link_to 'Countries', countries_path %> | <%= link_to 'Languages', languages_path %>
      <br />
      <br />
    <%= yield %>
  </div>
  </div>
  <div id="footer">
    <p id="copyright">@copy; Gowri Damarla</p>
  </div>
  </body>
</html>
