<%= form_with(model: datacenter, local: true) do |form| %>
  <% if datacenter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(datacenter.errors.count, "error") %> prohibited this datacenter from being saved:</h2>

      <ul>
      <% datacenter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>
  <tr>
   <th> <%= form.label :code %></th>
    <td><%= form.text_field :code, id: :datacenter_code %></td>
  </tr>

  <tr>
    <th><%= form.label :servers_available %></th>
    <td><%= form.number_field :servers_available, id: :datacenter_servers_available %></td>
  </tr>

  <tr>
    <th><%= form.label :servers_capacity %></th>
    <td><%= form.number_field :servers_capacity, id: :datacenter_servers_capacity %>(in TB)</td>
  </tr>

  <tr>
    <th><%= form.label :country_id %></th>
   <td><%= form.select(:country_id, Country.all.map { |c| [c.name, c.id]}) %>   <%= link_to 'Add New Country', new_country_path %></td>
  </tr>

  <tr>
    <td class = "center">
    <%= form.submit %>
  </td>
  </tr>
</table>
<% end %>
